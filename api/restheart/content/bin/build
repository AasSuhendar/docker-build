#!/bin/bash

set -e

echo "--------------------------------------------------"
echo "Dockerfile Build Tools"
echo "Email: dimas.restu@student.upi.edu"
echo "--------------------------------------------------"

echo ""
echo "[1] Run Some Housekeeping"
echo "--------------------------------------------------"
mkdir -p /opt/restheart \
  && mkdir -p /opt/restheart/etc
  && mkdir -p /usr/local/docker/opt/restheart \
  && mkdir -p /usr/local/docker/opt/restheart/etc \
  && chown -R root:root /var/run \
  && chown -R root:root /opt \
  && chown -R root:root /opt/restheart \
  && chown -R root:root /opt/restheart/etc \
  && chown -R root:root /usr/local/docker \
  && chown -R root:root /usr/local/docker/bin \
  && chown -R root:root /usr/local/docker/etc \
  && chown -R root:root /usr/local/docker/opt \
  && chmod 775 /var/run \
  && chmod 775 /opt \
  && chmod 775 /opt/restheart \
  && chmod 775 /opt/restheart/etc \
  && chmod 775 /usr/local/docker \
  && chmod 775 /usr/local/docker/bin \
  && chmod 775 /usr/local/docker/bin/build \
  && chmod 775 /usr/local/docker/bin/entrypoint \
  && chmod 775 /usr/local/docker/etc \
  && chmod 775 /usr/local/docker/etc/supervisor \
  && chmod 664 /usr/local/docker/etc/supervisor/supervisord.conf \
  && chmod 775 /usr/local/docker/etc/supervisor/conf.d \
  && chmod 664 /usr/local/docker/etc/supervisor/conf.d/01-catalina.conf \
  && chmod 775 /usr/local/docker/opt \
  && chmod 775 /usr/local/docker/opt/restheart \
  && chmod 775 /usr/local/docker/opt/restheart/etc \
  && chmod 664 /usr/local/docker/opt/restheart/etc/restheart.yml \
  && chmod 664 /usr/local/docker/opt/restheart/etc/security.yml \
echo "--------------------------------------------------"


echo ""
echo "[2] Installing Supervisor"
echo "--------------------------------------------------"
apt-get -y -o Acquire::Check-Valid-Until=false update \
  && apt-get -y -o Acquire::Check-Valid-Until=false install \
      supervisor \
  && apt-get -y -o Acquire::Check-Valid-Until=false autoremove \
  && apt-get -y -o Acquire::Check-Valid-Until=false clean
echo "--------------------------------------------------"


echo ""
echo "[3] Installing RESTHeart"
echo "--------------------------------------------------"
cd /usr/local/docker/opt/restheart \
  && curl -sL https://github.com/SoftInstigate/restheart/releases/download/${RESTHEART_VERSION}/restheart-${RESTHEART_VERSION}.tar.gz --output restheart.tar.gz \
  && tar zxvf restheart.tar.gz \
  && rm -rf restheart.tar.gz \
  && mv restheart-${RESTHEART_VERSION}/restheart.jar . \
  && rm -rf restheart-${RESTHEART_VERSION} \
  && chown -R root:root restheart.jar \
  && chmod 775 restheart.jar
echo "--------------------------------------------------"


echo ""
echo "[4] Configuring Supervisor"
echo "--------------------------------------------------"
rm -rf /etc/supervisor
echo "--------------------------------------------------"

exit 0
